<h2>Welcome, @ViewBag.user.Name!</h2>
<div>
    <h3>Balance:</h3>
    <h3>@ViewBag.user.Balance</h3>
    <form action="user/addToBalance" method="post">
        <h4>
            <label for="amount">Add To The Balance:</label>
            <input type="number" step="0.001" id="amount" name="amount" min="0.001"/>
            <input type="submit" value="Submit"/>
        </h4>
    </form>
</div>
<br>

@if (ViewBag.orders.Count > 0)
{
    <div>
        <h3>Orders:</h3> 
        <table>
            <tr>
                <th>Order Id</th>
                <th>Status</th>
                <th>Total Sum</th>
                <th>Order Info</th>
            </tr>
            @foreach (var order in ViewBag.orders)
            {
                <tr>
                    <th>@order.Id</th>
                    <th>@order.Status</th>
                    <th>@order.TotalSum</th>
                    <th>
                        <form action="/order/info/orderId=@order.Id" method="get">
                        <input type="submit" value="Info"/>
                        </form>
                    </th>
                </tr>
            }
        </table>
    </div>
}